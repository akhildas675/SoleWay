<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="login-container">
        <a href="userLogin" class="login-btn">Login</a>
    </div>
    <div class="container">
        <h1>Sign up</h1>
        <form id="registerForm" action="/verifyRegister" method="post" onsubmit="return validateForm()" novalidate>
            <div class="form-control">
                <input type="text" name="name" required>
                <label>Full Name</label>
            </div>
            <div id="nameError" class="error"></div>
            <div class="form-control">
                <input type="email" name="email" required>
                <label>Email</label>
            </div>
            <div id="emailError" class="error"></div>
            <div class="form-control">
                <input type="text" name="mobile" required>
                <label>Mobile</label>
            </div>
            <div id="mobileError" class="error"></div>
            <div class="form-control">
                <input type="password" name="password" required>
                <label>Password</label>
            </div>
            <div id="passwordError" class="error"></div>
            <div class="form-control">
                <input type="password" name="cpassword" required>
                <label>Confirm Password</label>
            </div>
            <div id="cpasswordError" class="error"></div>
            <button type="submit" class="btn">Sign Up</button>
            <!-- <p class="text">Already Have Account? please <a href="userLogin">Login</a></p> -->
        </form>
        <% if (typeof message !== 'undefined') { %>
            <p><%= message %> </p>
          <% } %>
    </div>
    <script src="script.js"></script>
</body>
</html>


<script>
  function validateForm() {
    const name = document.querySelector('input[name="name"]').value.trim();
    const mobile = document.querySelector('input[name="mobile"]').value.trim();
    const email = document.querySelector('input[name="email"]').value.trim();
    const password = document.querySelector('input[name="password"]').value.trim();
    const cpassword = document.querySelector('input[name="cpassword"]').value.trim();

    const nameError = document.getElementById('nameError');
    const mobileError = document.getElementById('mobileError');
    const emailError = document.getElementById('emailError');
    const passwordError = document.getElementById('passwordError');
    const cpasswordError = document.getElementById('cpasswordError');

    nameError.textContent = "";
    mobileError.textContent = "";
    emailError.textContent = "";
    passwordError.textContent = "";
    cpasswordError.textContent = "";

    let isValid = true;

    if (name === '') {
        nameError.textContent = 'Name field is required';
        isValid = false;
    }
    if (mobile === '') {
    mobileError.textContent = 'Mobile number is required';
    isValid = false;
} else {
    const mobileRegex = /^[1-9]\d{9}$/; 
    if (!mobileRegex.test(mobile)) {
        mobileError.textContent = 'Please enter a valid 10-digit mobile number that does not start with 0';
        isValid = false;
    } else {
       
        const allSameDigits = /^(\d)\1{9}$/.test(mobile);
        if (allSameDigits) {
            mobileError.textContent = 'Mobile number cannot be composed of all the same digits';
            isValid = false;
        } else {
            mobileError.textContent = '';
            isValid = true;
        }
    }
}

    if (email === '') {
        emailError.textContent = 'Email field is required';
        isValid = false;
    } else {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            emailError.textContent = 'Enter a valid email';
            isValid = false;
        }
    }
    if (password === '') {
        passwordError.textContent = 'Password field is required';
        isValid = false;
    }else {
        if(password.length<6){
            passwordError.textContent='password must be 6 characters'
        }
    }
    if (cpassword === '') {
        cpasswordError.textContent = 'Confirm Password field is required';
        isValid = false;
    } else {
        if (cpassword !== password) {
            cpasswordError.textContent = 'Passwords do not match';
            isValid = false;
        }
    }


    if (!isValid) {
        setTimeout(() => {
            nameError.textContent = "";
            mobileError.textContent = "";
            emailError.textContent = "";
            passwordError.textContent = "";
            cpasswordError.textContent = "";
        }, 3000);
    }
    return isValid;
}


document.getElementById('registerForm').addEventListener('submit',function(event){
    if(!validateForm()){
        event.preventDefault();
    }
})


</script>

